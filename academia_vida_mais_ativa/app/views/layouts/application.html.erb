        <script src="/assets/jquery-1.9.1.min.js" type="text/javascript"></script>
        <script src="/assets/bootstrap.js"></script>
        <script type="text/javascript">
        $(document).ready(function(){
          $(function() {
            var nav = $('#top_wrapper');
            var img = $('#logo img');
            var navHomeY = 90;
            var imgHomeY = 0;
            var $w = $(window);
            ajustarMenu = function() {
              var scrollTop = $w.scrollTop();
              if (scrollTop < navHomeY) {
                nav.css({
                  top: "-"+scrollTop+"px"
                });
              }
              else {
                nav.css({
                  top: "-"+navHomeY+"px"
                });
              }
              imgWidth = 275 - scrollTop;
              imgLeft = scrollTop / 5;
              if (imgWidth < 96)
                imgWidth = 70;
                if (imgLeft > 40)
                  imgLeft = 40;
                  img.css({position: "fixed", marginLeft: imgLeft + "px", top: 0, width: imgWidth+"px"});
                };
                $w.scroll(ajustarMenu);
                ajustarMenu();
              });
            });
            </script>


            <script>(function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>


            </html>
