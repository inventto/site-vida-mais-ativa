    </div>
  </div>
  <h1><strong>Academia Vida + Ativa</strong></h1>
  <div>
    <%= yield %>
    <i></i>
  </div>
  <div id="footer" class="container-fluid">
    <div class="col-md-6 endereco">
      <span>Endereço: Av. União da Vitória, 407, Vila Nova, Francisco Beltrão - PR</span><br/>
      <span>Fones: (46) 3524-2541</span> | <span>(46) 3057-2541</span>
    </div>
    <div class="col-md-3">
     <%= render partial: "layouts/tabela_de_funcionamento" %> 
    </div>
    <div class="col-md-3">
      <div class="redes-sociais">
        <span>Acompanhe nas redes sociais:</span><br />
        <a target="_blank" href="https://www.facebook.com/AcademiaVidaMaisAtiva"><img src="/assets/facebook.png" width="40px" title="Facebook Academia Vida mais ativa"/></a>
     </div>
     <div class="inventto">
       <a href="http://www.invent.to"><img src="/assets/logo_footer.png"/></a>
     </div>
    </div>
  </div>

  </body>
  <script src="/assets/jquery-1.9.1.min.js" type="text/javascript"></script>
  <script src="/assets/bootstrap.js"></script>
  <script type="text/javascript">
$(document).ready(function(){
    $(function() {
              var nav = $('#top_wrapper');
              var img = $('#logo img');
              var navHomeY = 90;
              var imgHomeY = 0;
              var $w = $(window);
      ajustarMenu = function() {
             var scrollTop = $w.scrollTop();
             if (scrollTop < navHomeY) {
                 nav.css({
                       top: "-"+scrollTop+"px"
                   });
             }
             else {
                 nav.css({
                       top: "-"+navHomeY+"px"
                   });
             }
      imgWidth = 300 - scrollTop;
      imgLeft = scrollTop / 5;
      if (imgWidth < 96)
        imgWidth = 70;
      if (imgLeft > 40)
        imgLeft = 40;
      img.css({position: "fixed", marginLeft: imgLeft + "px", top: 0, width: imgWidth+"px"});
      };
              $w.scroll(ajustarMenu);
      ajustarMenu();
    });
});
  </script>
  </html>
